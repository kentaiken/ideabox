<div class = 'row'>
	<div class = 'col-md-9'>
		<p class = 'lead'>These are ideas you have created.</p>
		<%= erb :idea_list, :locals => { ideas: ideas } %>


	</div>
	<div class = 'col-md-3'>
		<p class = 'lead'>Idea Tags</p>
			<% tags.each do |tag| %>
				<p>
				<a href = '/ideas/<%=tag%>'><%= tag %></a>
				</p>
			<% end %>
	</div>
</div>

<div class = 'row'>
	<div class = 'col-md-6'>
		<p class = 'lead'>Add a new idea.</p>
		<%= erb :form, :locals => { idea: idea, mode: 'post' } %>
	</div>
</div>
<script type = 'text/javascript' src = 'bootstrap/js/bootstrap.js'></script>


