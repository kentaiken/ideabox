<% if ideaGroup.empty? %>

	<p> <i> Sorry there aren't any ideas recorded yet. </i> </p>

<% else %>
	<% ideaGroup.each do |group, ideas| %>

		<p class = 'lead'><a href = '/group/<%= group %>'><%= group %></a></p>
		<% ideas.each do |idea| %>

			<div class = 'idea'>
				<div class = 'ideaHeading'>

					<p><%= idea.title %></p>
				</div>
				<div class = 'ideaDescription'>
					<%= idea.description %>
					</br>
					</br>
						<p>Group : <a href = '#'><%= idea.group %></a></p>
						<a href = '/idea/<%= idea.id %>'> Details  </a>
						<a href = '/<%= idea.id %>/edit'>Edit  </a>
						<a href = '#' onClick = "document.getElementById('deleteForm<%= idea.id %>').submit();">Remove  </a>
						<a href = '/<%= idea.id %>/like'>Like <span class = 'badge'><%= idea.likes %></span></a>
				</div>
				<form id = 'deleteForm<%= idea.id %>' action = '/<%= idea.id %>/delete' method = 'POST'>

						<input type = 'hidden' name = '_method' value = 'DELETE'/>

				</form>


			</div>

		<% end %>

	<% end %>
<% end %>
